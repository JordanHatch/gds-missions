<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <header class="primary">
      <div class="logo">
        <h1><a href="#">GDS</a></h1>
      </div>
      <div class="inner">
        <h2><%= link_to "Missions", root_path %></h2>
        <nav>
          <ul>
            <%= nav_link :completed, "Completed", missions_path %>
            <%= nav_link :teams, "Teams", teams_path %>
          </ul>
        </nav>
      </div>
    </header>


    <div class="row">
      <div class="col-md-10 col-md-offset-2 content">
        <% if flash.any? %>
          <% flash.each do |key, message| %>
            <div class="flash flash-<%= key %>"><%= message %></div>
          <% end %>
        <% end %>

        <% if content_for?(:title) %>
          <h1 class="page-title"><%= content_for(:title) %></h1>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
