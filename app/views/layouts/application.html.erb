<!DOCTYPE html>
<html>
<head>
  <title><%= "#{yield(:title)} - " if content_for?(:title) %>GDS Missions</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <header class="row">
      <div class="col-md-2">
        <h1 id="logo"><a href="#">GDS</a></h1>
      </div>
      <div class="col-md-10">
        <h2><%= link_to "Missions", root_path %></h2>
      </div>
    </header>


    <div class="row">
      <div class="col-md-10 col-md-offset-2 content">
        <% if content_for?(:title) %>
          <h1 class="page-title"><%= yield(:title) %></h1>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
