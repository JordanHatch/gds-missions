<%= semantic_form_for mission do |f| %>
  <%= f.input :name %>
  <%= f.input :team, collection: Team.all %>
  <%= f.input :mission_patch, as: :file %>
  <%= f.input :short_description, as: :text,
                                  input_html: {
                                    rows: 5
                                  } %>

  <%= f.actions %>
<% end %>
